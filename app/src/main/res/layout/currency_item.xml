<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/h_black">

    <RelativeLayout
        android:id="@+id/idViewModelCurrency"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corner_view_for_currencies">

        <TextView
            android:id="@+id/idCurrencySymbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"
            android:layout_toLeftOf="@id/idCurrencyPrice"
            android:padding="3dp"
            android:text="Symbol"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idCurrencyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idCurrencySymbol"
            android:layout_margin="7dp"
            android:padding="3dp"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="@color/n_blue" />

        <TextView
            android:id="@+id/idCurrencyPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="7dp"
            android:padding="3dp"
            android:text="Price"
            android:textColor="@color/white" />
    </RelativeLayout>
</android.support.v7.widget.CardView>